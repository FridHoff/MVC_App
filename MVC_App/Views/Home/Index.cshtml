@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/_Master.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    @inject MVC_App.Services.ITimeService Timer
    <h2>Текущее время: @Timer.GetTime()</h2>
</div>
<form method="post" action="~/Home/Area">
    <label>Высота:</label><br />
    <input type="number" name="height" /><br /> 
    <label>Основание:</label><br />
    <input type="number" name="altitude" /><br />
    <input type="submit" value="Отправить" />
</form>
@{await Html.RenderPartialAsync("_GetMessage", new List<string> { "Lumia 950", "iPhone 6S", "Samsung Galaxy s 6", "LG G 4" });}
@Html.ActionLink("Получить книгу", "GetFile")
@section Footer {
    Все права защищены. Site Corp. 2016.
}